{
    "manifest_version": 3,
    "name": "TrackAware",
    "version": "3.0",
    "description": "Extension de suivi local et de transparence des donn√©es personnelles.",
    "icons": {
        "16": "icons/icon16.jpeg",
        "32": "icons/icon32.jpeg",
        "48": "icons/icon48.jpeg",
        "128": "icons/icon128.jpeg"
    },
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "idle"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/dashboard/dashboard.html",
                "src/dashboard/dashboard.js",
                "src/dashboard/dashboard.css",
                "src/consent/consent.html",
                "src/consent/consent.js",
                "src/consent/consent.css",
                "style/style.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}